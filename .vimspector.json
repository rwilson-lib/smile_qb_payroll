{
    "configurations": {
        "django": {
            "adapter": "debugpy",
            "configuration": {
                "request": "launch",
                "stopOnEntry": true,
                "python": "${VIRTUAL_ENV}/bin/python3",
                "program": "${workspaceRoot}/manage.py",
                "args": [
                    "runserver",
                    "localhost:5555",
                    "--noreload"
                ],
                "django": true
            }
        },
        "launch-js": {
            "adapter": "chrome",
            "configuration": {
                "program": "${workspaceRoot}/manage.py runserver",
                "request": "launch",
                "url": "http://localhost:8000/",
                "webRoot": "${workspaceRoot}/",
                "breakpoints": {
                    "exception": {
                        "caught": "",
                        "uncaught": "Y"
                    }
                }
            }
        },
        "attached": {
            "adapter": "debugpy",
            "configuration": {
                "name": "django",
                "type": "python",
                "request": "attach",
                "connect": {
                    "host": "localhost",
                    "port": 8000
                }
            }
        }
    }
}
